- provide(:title, 'Login Page')

%h1 Profile settings

= form_tag '/profile/settings/update', :method => :put do

  - if @profile.errors.any?
    .alert.alert-danger
      %h2
        = pluralize(@profile.errors.count, "error") + 'prohibited this course from being saved:'
      %ul
      - @profile.errors.full_messages.each do |message|
        %li
          = message

  .form-group
    = label :profile, :name, 'Name', class: 'control-label'
    = text_field :profile, 'name', class: 'form-control'

  .form-group
    = label :profile, :surname, 'Surname', class: 'control-label'
    = text_field :profile, 'surname', class: 'form-control'

  .form-group
    = label :profile, :email, 'Email', class: 'control-label'
    = text_field :profile, 'email', class: 'form-control'

  = button_tag  type: 'submit', class: 'btn btn-default' do
    %span
      %i{class: 'fa fa-save'}
      Save settings
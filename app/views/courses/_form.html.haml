= form_with(model: course, local: true) do |form|
  = write_validation_errors_for course

  .form-group
    = form.label :code, clas:'control-label'
    = form.text_field :code, id: :course_code, class:'form-control'

  .form-group
    = form.label :description, clas:'control-label'
    = form.text_field :description, id: :course_description, class:'form-control'

  .form-group
    = form.label :semester, clas:'control-label'
    = form.text_field :semester, id: :course_semester, class:'form-control'

  .form-group
    = form.label :note, clas:'control-label'
    = form.text_field :note, id: :course_note, class:'form-control'

  = button_tag  type: 'submit', class: 'btn btn-default' do
    %span
      %i{class: 'fa fa-save'}
      #{course.id.nil? ? 'Save' : 'Edit'} Course
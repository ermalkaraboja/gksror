.row
  .col-xs-12

    %h1
      Students
    .table-responsive
    %table{class:'table table-bordered table-hover table-striped'}
      %thead
        %tr
          %th
            Name
          %th
            Surname
          %th
            Email
          %th>
            Role
      %tbody
        -@students.each do |student|
          %tr
            %td
              = student.name
            %td
              = student.surname
            %td
              = student.email
            %td
              = student.role.description
    %br

